#!/bin/sh
#
# capify-ee
# Blake Walters / @markupboy
#
# Capify an ExpressionEngine 2.x project
#
# requires capistrano

capify .
rm -rf ./config/deploy.rb
curl https://github.com/markupboy/EE2-cap-deploy/raw/master/database.yml.sample --O ./config/database.yml
curl https://github.com/markupboy/EE2-cap-deploy/raw/master/deploy.rb --O ./config/deploy.rb
clear
echo "Capify complete, be sure to edit ./config/database.yml with your DB settings"


